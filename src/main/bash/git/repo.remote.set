#!/usr/bin/env bash
address=$1
# Ensure the remote branch is present.
			# If this is not executed, the rest of commands fail a remote is added the first time.
	git remote add origin $address
	git fetch
git remote set-url origin $address
git remote set-url --push origin $address
git branch --set-upstream-to=origin/$(git symbolic-ref --short HEAD) $(git symbolic-ref --short HEAD)
